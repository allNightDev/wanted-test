generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:test1234@localhost/wanted-test"
}

model post {
  id       Int      @id @default(autoincrement())
  title    String
  content  String
  writer   String
  password String
  createDt DateTime @default(dbgenerated("NOW()")) @map("create_dt") @db.DateTime(0)
  updateDt DateTime @default(dbgenerated("NOW()")) @updatedAt @map("update_dt") @db.DateTime(0)

  comment comment[]

  @@map("POST")
}

model comment {
  id        Int      @id @default(autoincrement())
  content   String
  writer    String
  postId    Int      @map("post_id")
  commentId Int?     @map("parent_id")
  createDt  DateTime @default(dbgenerated("NOW()")) @map("create_dt") @db.DateTime(0)

  post post @relation(fields: [postId], references: [id], onDelete: Cascade)

  parent  comment?  @relation("reply", fields: [commentId], references: [id], onDelete: Cascade)
  replies comment[] @relation("reply")

  @@map("COMMENT")
}

model keyword {
  id      Int    @id @default(autoincrement())
  keyword String
  writer  String

  keywordNoti keywordNoti[]

  @@unique([keyword, writer])
  @@fulltext([keyword])
  @@map("KEYWORD")
}

model keywordNoti {
  id        Int       @id @default(autoincrement())
  type      NOTI_TYPE
  targetId  Int       @map("target_id")
  keywordId Int       @map("keyword_id")
  createDt  DateTime  @default(dbgenerated("NOW()")) @map("create_dt") @db.DateTime(0)

  keyword keyword @relation(fields: [keywordId], references: [id])

  @@map("KEYWORD_NOTI")
}

enum NOTI_TYPE {
  POST
  COMMENT
}
